<% layout("/layouts/boilerplate") %>



    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Background Image with Shop Now Button</title>
        <style>
           
    
            .background-container {
                width: 100vw; 
                height: 100vw; 
                background-image: url('https://www.myweeklypreview.com.au/wp-content/uploads/2017/10/shutterstock_641814016.jpg'); /* Replace with your image URL */
                background-size: cover;  
                 background-position: center; 
                display: flex;
                justify-content: center; 
                align-items: center;
           
              
            }
    
            .shop-now-button {
                background-color: #007bff; 
                color: white;
                padding: 15px 30px;
                border: none;
                border-radius: 5px;
                font-size: 18px;
                cursor: pointer;
                transition: background-color 0.3s ease; 
                text-decoration: none; 
            }
    
            .shop-now-button:hover {
                background-color: #0056b3; 
            }
            .card {
            transition: transform 0.3s ease-in-out;
        }
        .card:hover {
            transform: scale(1.05);
        }
        
    
        </style>
    </head>
    <body>
    
    <div class="background-container">
       
        <a href="#" class="shop-now-button">Shop Now</a> 
     </div>
     <div class="sec-part">
    
          <div class="container my-5">
            <h2 class="text-center mb-4">Our Products</h2>
            <div class="row g-4">
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card">
                        <img src="https://images.unsplash.com/photo-1592009309602-1dde752490ae?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <h5 class="card-title">Men</h5>
                            <p class="card-text">This is a brief description of the product.</p>
                            <a href="#" class="btn btn-primary">Buy Now</a>
                        </div>
                    </div>
                </div>
        
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card">
                        <img src="https://img.freepik.com/premium-photo/plus-size-woman-generative-ai_836477-36925.jpg" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <h5 class="card-title">Women</h5>
                            <p class="card-text">This is a brief description of the product.</p>
                            <a href="#" class="btn btn-primary">Buy Now</a>
                        </div>
                    </div>
                </div>
        
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card">
                        <img src="https://tse4.mm.bing.net/th?id=OIP.yUgUTZpDo36TCXN_YJxlbgHaEo&pid=Api&P=0&h=220" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <h5 class="card-title">Child</h5>
                            <p class="card-text">This is a brief description of the product.</p>
                            <a href="#" class="btn btn-primary">Buy Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
     </div>

    </body>
    </html>



